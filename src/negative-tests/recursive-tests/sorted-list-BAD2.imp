insert_loop(x,p) {
  let (v,nxt) = *p in
  if v < x then {
    ifnull nxt then {
       p := (v,mkref (x, null));
//	   test_sorted_loop(p);
    } else {
//      insert_loop(x,nxt);
      alias(nxt = (*p).1);
    }
  } else {
    assert(x <= v);
	p := (x, mkref (v, nxt));
	let (g,v2) = *p in
	let (d,_) = *v2 in {
       assert(g <= d);
	   alias(v2 = (*p).1);
    }
  };
}

insert(x, p) {
  let hd = *p in
  ifnull hd then {
    p := mkref (x,null)
  } else {
    insert_loop(x, hd);
	alias(hd = *p)
  }
}

