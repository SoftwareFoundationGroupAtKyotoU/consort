test_sorted_loop(p) {
  let (v,nxt) = *p in {
  ifnull nxt then
    ()
  else {
    let (nxt_v,_) = *nxt in {
	  assert(v <= nxt_v);
	  test_sorted_loop(nxt)
	}
  };
  alias(nxt = (*p).1);
  }
}
