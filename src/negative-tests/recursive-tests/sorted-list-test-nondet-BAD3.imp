test_sorted_loop(p) {
  let (v,nxt) = *p in {
  ifnull nxt then
    ()
  else {
    let (nxt_v,_) = *nxt in {
	  assert(v <= nxt_v);
	  test_sorted_loop(nxt)
	}
  };
  alias(nxt = (*p).1);
  }
}

test_sorted(p) {
  let hd = *p in
  ifnull hd then {
    ()
  } else {
    test_sorted_loop(hd);
  }
}

insert_loop(x,p) {
  let (v,nxt) = *p in {
  if v < x then {
    ifnull nxt then {
      p := (v,mkref (x, null));
    } else {
      insert_loop(x,nxt);
      alias(nxt = (*p).1);
    }
  } else {
	p := (v, mkref (x, nxt));
  }
  };
}

insert(x, p) {
  let hd = *p in
  ifnull hd then {
    p := mkref (x,null);
  } else {
    insert_loop(x, hd);
	alias(hd = *p)
  }
}

fresh_list() {
  mkref null
}

loop_insert(l) {
  if _ then {
    insert(_, l);
	loop_insert(l)
  } else ()
}

{
 let l = fresh_list () in {
   loop_insert(l);
   test_sorted(l)
 }
}
