copy_array(i,ar1,ar2) {
  if i = ar1.length then
    ()
  else {
    assert(i < ar1.length);
//	assert(ar1.length <= ar2.length);
    //ar2[] <- ar1[i];
	copy_array((i+1),ar1,ar2);
  }
}

